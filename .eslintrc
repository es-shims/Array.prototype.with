{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": "off",
		"new-cap": ["error", {
			"capIsNewExceptions": [
				"ArrayCreate",
				"CreateDataPropertyOrThrow",
				"DefinePropertyOrThrow",
				"Get",
				"GetIntrinsic",
				"LengthOfArrayLike",
				"ToIntegerOrInfinity",
				"ToObject",
				"ToString",
			],
		}],
	},

	"overrides": [
		{
			"files": "test/tests.js",
			"rules": {
				"max-lines-per-function": "off",
			},
		},
	],
}
